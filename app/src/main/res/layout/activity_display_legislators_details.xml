<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.android.congressapi.DisplayLegislatorsDetails">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/black"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/display_legislators_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/details_icons"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="130dp">

            <ImageButton android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/star"
                android:background="#00ffffff"
                android:layout_marginRight="30dp"
                android:onClick="toggleFavoriteLegislator"/>

            <ImageView android:id="@+id/facebook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook"
                android:background="#00ffffff"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:onClick="goToFacebook"/>

            <ImageView android:id="@+id/twitter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/twitter"
                android:background="#00ffffff"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:onClick="goToTwitter"/>

            <ImageView android:id="@+id/world"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/world"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:onClick="goToWorld"/>
        </LinearLayout>
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imageInDetails"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
        <LinearLayout
            android:id="@+id/party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/partyLogo"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/partyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TableLayout
            android:id="@+id/legislatorTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
            <TableRow
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:text="Name:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/legislatorTable_name"
                    android:layout_gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:text="Email:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/legislatorTable_email"
                    android:layout_gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Chamber:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/legislatorTable_chamber"
                    android:layout_gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Contact:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/legislatorTable_contact"
                    android:layout_gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Start Term:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/legislatorTable_start_term"
                    android:layout_gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="End Term:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/legislatorTable_end_term"
                    android:layout_gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Term:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:padding="0dp" >
                    <ProgressBar
                        android:id="@+id/legislatorTable_progressbar"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progress="40"/>
                    <TextView
                        android:id="@+id/legislatorTable_progressbar_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Office:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="State:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Fax:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Birthday:"
                    android:textColor="#190707"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
